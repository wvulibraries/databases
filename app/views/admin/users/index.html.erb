<h1>Admin Users</h1>

<table>
  <thead>
    <tr>
      <th> Name </th>
      <th> Email </th>
      <th> Username </th>
      <th colspan="2"> Actions </th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td data-label="Name"> <%= user.name %> </td>
        <td data-label="Email"> <%= user.cas_email %> </td>
        <td data-label="Username"> <%= user.cas_username %> </td>
        <td data-label="Edit"> <%= link_to  raw('<span class="fas fa-edit"></span>'), edit_admin_user_path(user), { class: 'edit-button', title: 'Edit' } %> </td>
        <td data-label="Delete"> <%= link_to raw('<span class="fas fa-trash"></span>'), admin_user_path(user), method: :delete, class: 'delete-button', data: { confirm: 'Are you sure?' }, title:'Delete' %> </td>
      </tr>
    <% end %>
  </tbody>
</table>
