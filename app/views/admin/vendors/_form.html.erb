<%= form_for [:admin, vendor], html: { multipart: true } do |form| %>
  <% if vendor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(vendor.errors.count, "error") %> prohibited this vendor from being saved:</h2>

      <ul>
      <% vendor.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset> 
    <legend> Vendor Information </legend>

    <div class="field">
      <%= form.label :name, class: 'required' %>
      <%= form.text_field :name %>
    </div>

    <div class="field">
      <%= form.label :url, class: 'required' %>
      <%= form.text_field :url %>
    </div>

  </fieldset>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
