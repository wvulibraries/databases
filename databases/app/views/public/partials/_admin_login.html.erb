<section class="open_access" aria-label="Admin Login">
<h2> Admin Login </h2>
<div class="authentication_links" style="display: flex !important; flex-direction: row !important; flex-wrap: wrap !important; align-items: center !important;">
<% if authenticated? && admin? %>
  <a href="/admin" class="button admin-panel" style="display: inline-block !important; width: auto !important; margin-right: 10px !important; background-color: #0049AC !important; border-color: #0049AC !important; color: white !important; text-shadow: none !important; font-size: 14px !important; padding: 6px 12px !important;"> 
    <span class="fa fa-cog" style="color: white !important;"></span>
    <span style="color: white !important;">Admin</span>
  </a>
<% end %>

<% if authenticated?%>
  <a href="/signout" class="button signout" style="display: inline-block !important; width: auto !important; background-color: #EAAA00 !important; border-color: #EAAA00 !important; color: black !important; text-shadow: none !important; font-size: 14px !important; padding: 6px 12px !important;"> 
    <span class="fa fa-lock" style="color: black !important;"></span>
    <span style="color: black !important;">Sign Out</span>
  </a>
<% else %>
   <a href="/login" class="button login" style="display: inline-block !important; width: auto !important; background-color: #0049AC !important; border-color: #0049AC !important; color: white !important; text-shadow: none !important; font-size: 14px !important; padding: 6px 12px !important;"> 
    <span class="fa fa-unlock" style="color: white !important;"></span>
    <span style="color: white !important;">Login</span>
  </a>
<% end %>
</div>
</section>
