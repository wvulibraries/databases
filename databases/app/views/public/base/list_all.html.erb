<%# Utility Bar %>
<%#
<div class="utility"> 
  <div class="breadcrumbs"> 
    <ul> 
      <li> <a href="/"> Home </a> </li>
      <li> <a href="/AtoZ/<%=@character%>" class="current"> By Title: All </a> </li>
    </ul>
  </div>

  <div class="results"> 
    <strong>
      <%= @count %> 
    </strong>
    Results
  </div>
</div>
%>

<%# Databases by Title  %>
<%= render 'public/partials/title_list'  %>

<%# Database List %>
<% @databases.each do |letter, databases| %>
  <% if is_number?(letter) %>
    <h2> # </h2> 
  <% else %>
    <h2> <%= letter %> </h2>
  <% end %>
  <% databases.each do |db| %>
  <div class="database-results"> 
    <%= DatabaseDecorator.new(db).display_title %>
    <p> <%= raw db.description %> </p>
  </div>
  <% end %>
<% end %>

